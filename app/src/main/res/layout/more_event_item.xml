<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="300dp"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<ImageView
    android:id="@+id/list_item_more_image_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"/>

    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:alpha="0.3"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/like"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            android:layout_marginStart="270dp"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_like_unselected_24dp" />

        <ImageView
            android:id="@+id/bookmark"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_bookmark_24dp" />

        <ImageView
            android:id="@+id/share"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_share_24dp" />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/list_item_more_event_date_layout"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:alpha="0.9"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_more_event_day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="17"
            android:textSize="16dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/list_item_more_event_month_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEC"
            android:fontFamily="@font/montserrat"
            android:textSize="16dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>
    <FrameLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:alpha="0.8"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:id="@+id/list_item_more_event_name_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="2"
            android:fontFamily="@font/montserrat"
            android:text="La semaine mondiale de l'entrepreneuriat"
            />

    </LinearLayout>


</LinearLayout>

</android.support.constraint.ConstraintLayout>