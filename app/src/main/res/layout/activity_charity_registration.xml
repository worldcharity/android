<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Login.CharityRegistrationActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:textAlignment="center"
        android:textSize="@dimen/title"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Tell us more about your association" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_logo2"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounededbutton"
        android:onClick="loadImagefromGallery"
            android:layout_gravity="center"
        android:text="Choose your logo"
            android:fontFamily="@font/montserrat"
        android:textColor="@color/colorBackground" />

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="83dp"
        android:layout_height="88dp"
        android:contentDescription="TODO"
        app:srcCompat="@android:drawable/ic_menu_gallery" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/name_charity_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Association's name"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/description_charity_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Describe your association"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/charity_reg"
        android:layout_width="350dp"
        android:gravity="center"
        android:fontFamily="@font/montserrat"
        android:layout_height="wrap_content"
        android:background="@drawable/rounededbutton"
        android:text="Continue"
        android:layout_gravity="center"
        android:textColor="@color/colorBackground"
        />


</LinearLayout>