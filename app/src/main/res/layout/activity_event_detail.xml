<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/activity_event_details_coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/details_event_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/colorPrimary"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.3"
                android:background="@color/colorPrimaryDark"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/like_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="270dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:contentDescription="TODO"
                    android:tint="@android:color/white"
                    app:srcCompat="@drawable/ic_like_unselected_24dp" />

                <ImageView
                    android:id="@+id/bookmark_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:contentDescription="TODO"
                    android:tint="@android:color/white"
                    app:srcCompat="@drawable/ic_bookmark_24dp" />

                <ImageView
                    android:id="@+id/share_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="15dp"
                    android:tint="@android:color/white"
                    app:srcCompat="@drawable/ic_share_24dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <!-- Expired -->
                <LinearLayout
                    android:id="@+id/activity_event_details_expired_layout"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:text="EXPIRED"
                            android:textColor="@android:color/white"
                            android:textSize="40sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Counter -->
                <LinearLayout
                    android:id="@+id/activity_event_details_count_layout"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <!-- Day -->
                    <android.support.v7.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/activity_event_details_day_count_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text="12"
                                android:textColor="@android:color/white"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text="Jours"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:paddingBottom="3dp"
                        android:text=":"
                        android:textColor="@color/colorPrimary"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <!-- Hour -->
                    <android.support.v7.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/activity_event_details_hour_count_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text="07"
                                android:textColor="@android:color/white"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text="Heures"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:paddingBottom="3dp"
                        android:text=":"
                        android:textColor="@color/colorPrimary"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <!-- Minute -->
                    <android.support.v7.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/activity_event_details_minute_count_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text="43"
                                android:textColor="@android:color/white"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text="Minutes"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:paddingBottom="3dp"
                        android:text=":"
                        android:textColor="@color/colorPrimary"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <!-- Second -->
                    <android.support.v7.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/activity_event_details_second_count_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text="04"
                                android:textColor="@android:color/white"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text="Secondes"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/event_details_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingStart="8dp"
        android:fillViewport="true"
        android:paddingEnd="8dp"
        android:paddingBottom="0dp"
        tools:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <!-- About -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="10dp"
                android:elevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                    <TextView
                        android:gravity="left"
                        android:id="@+id/activity_event_details_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event's name"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:textSize="@dimen/title"
                        android:layout_marginBottom="8dp"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="1"
                            android:id="@+id/activity_event_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24 comments"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14dp"
                            android:layout_marginBottom="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/details_event_description_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="description"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorPrimaryDark"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- Details -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Détails"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"/>

                    <!-- Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:tint="@color/colorPrimaryDark"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_calendar_24dp"
                            android:layout_marginEnd="8dp"
                            android:alpha="0.7"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="4dp">

                            <TextView
                                android:id="@+id/activity_event_details_start_date_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mardi, 23 Juillet"
                                android:fontFamily="@font/montserrat"
                                android:textColor="@color/colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/activity_event_details_start_date_time_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat"
                                android:text="9:30"
                                android:layout_marginTop="2dp"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/activity_event_details_to_arrow_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_arrow_forward_black_24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="4dp">

                            <TextView
                                android:id="@+id/activity_event_details_end_date_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mercredi, 24 Juillet"
                                android:fontFamily="@font/montserrat"
                                android:textColor="@color/colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/activity_event_details_end_date_time_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11:00"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginTop="2dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:tint="@color/colorPrimaryDark"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_add_location_black_24dp"
                            android:alpha="0.7"/>

                        <TextView
                            android:id="@+id/activity_event_details_address_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cinema Collisée, Tunis"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/colorAccent"/>

                    </LinearLayout>

                    <!-- Gallery -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:tint="@color/colorPrimaryDark"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_photo_library"
                            android:alpha="0.7"/>

                        <TextView
                            android:id="@+id/activity_event_details_gallery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="( photos"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/colorAccent"/>

                    </LinearLayout>

                    <!-- Infoline -->
                    <LinearLayout
                        android:id="@+id/activity_event_infoline_layout"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_call"
                            android:alpha="0.7"/>

                        <TextView
                            android:id="@+id/activity_event_details_infoline_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="53954862"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/colorAccent"/>

                    </LinearLayout>

                    <!-- Tags -->
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/cause_btn"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="taaaaaaaaag"
                            android:paddingHorizontal="20dp"
                            android:layout_marginEnd="10dp"
                            android:backgroundTint="@color/colorAccent"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rounededbutton"
                            android:layout_height="wrap_content" />
                        <Button
                            android:id="@+id/type_btn"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="tag"
                            android:paddingHorizontal="20dp"
                            android:backgroundTint="@color/colorAccent"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rounededbutton"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>