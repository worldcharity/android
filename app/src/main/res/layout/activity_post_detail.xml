<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/activity_event_details_coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UI.posts.PostDetailActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <TextView
                android:id="@+id/post_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorBackground"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="@string/longtext"
                android:orientation="vertical"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/colorPrimary"
                app:theme="@style/ToolBarStyle"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/event_details_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingStart="8dp"
        android:fillViewport="true"
        android:paddingEnd="8dp"
        android:paddingBottom="0dp"
        tools:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/com"
                android:layout_marginTop="5px"
                android:gravity="center_horizontal|top"
                android:paddingTop="2px" >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:elevation="30dp">
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/add_comment"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:ems="200"
                            android:layout_gravity="left|center_horizontal"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/montserrat"
                            android:hint="Add a comment"
                            android:inputType="text" />

                        <ImageView
                            android:layout_gravity="right|center"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:id="@+id/add_comment_btn"
                            android:tint="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_insert_comment"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_weight="3"
                    android:layout_below="@+id/com"
                    android:layoutAnimation="@anim/recycler_animation"
                    android:id="@+id/comments_list"
                    android:orientation="vertical"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    >


                </android.support.v7.widget.RecyclerView>





        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>