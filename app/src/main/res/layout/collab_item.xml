<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/collab_by_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/montserrat"
            android:text="Olfa Karoui"
            android:textSize="@dimen/title"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/collab_by_photo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/donation" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/type_collab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Human resources"
                        android:textSize="@dimen/title"
                        android:layout_marginStart="20dp"
                        />
                    <TextView
                        android:id="@+id/event_collab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/montserrat"
                        android:text="Event number one"
                        android:textSize="18dp"
                        android:layout_marginStart="20dp"
                        />

                    <TextView
                        android:id="@+id/amount_collab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/montserrat"
                        android:text="amount: 1"
                        android:textSize="12dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                    <ImageView
                        android:id="@+id/confirm_collab"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tint="@color/colorAccent"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_close_black_24dp"

                        />

                    <ImageView
                        android:id="@+id/deny_collab"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tint="@color/colorAccent"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_check_black_24dp" />




            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>